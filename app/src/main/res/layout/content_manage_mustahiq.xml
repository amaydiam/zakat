<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="400dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <com.ad.zakat.widget.RobotoRegularEditText
                            android:id="@+id/nama_mustahiq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName|textNoSuggestions"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Alamat Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <com.ad.zakat.widget.RobotoRegularEditText
                            android:id="@+id/alamat_mustahiq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:gravity="top"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:minHeight="150dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nomor Identitas Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <com.ad.zakat.widget.RobotoRegularEditText
                            android:id="@+id/no_identitas_mustahiq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number|textNoSuggestions"
                            android:digits="0123456789"
                            android:maxLines="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nomor Telp Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <com.ad.zakat.widget.RobotoRegularEditText
                            android:id="@+id/no_telp_mustahiq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number|textNoSuggestions"
                            android:digits="0123456789"
                            android:maxLines="1" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Amil Zakat"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/id_amil_zakat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Validasi Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                        <RadioGroup
                            android:id="@+id/validasi_mustahiq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/tidak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Calon Mustahiq" />

                            <RadioButton
                                android:id="@+id/ya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mustahiq" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Status Mustahiq"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <RadioGroup
                            android:id="@+id/status_mustahiq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/aktif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Aktif" />

                            <RadioButton
                                android:id="@+id/tidak_aktif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tidak Aktif" />
                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>