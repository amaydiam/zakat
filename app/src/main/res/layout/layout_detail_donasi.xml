<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_secondary"
    android:orientation="vertical"
    android:padding="@dimen/dist_large">

    <com.ad.zakat.widget.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Keterangan Muzaki (Pemberi Donasi)"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/foto_profil_muzaki"
            android:layout_width="@dimen/foto_profil_detail_size"
            android:layout_height="@dimen/foto_profil_detail_size"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:av_border_color="@android:color/white"
            app:av_border_width="4dp"
            app:av_text_size_percentage="35" />

        <com.ad.zakat.widget.RobotoBoldTextView
            android:id="@+id/nama_muzaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="nama_muzaki" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/alamat_muzaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="alamat_muzaki" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/no_identitas_muzaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="no_identitas_muzaki" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/no_telp_muzaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="no_telp_muzaki" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/status_muzaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="status_muzaki" />
    </LinearLayout>


    <com.ad.zakat.widget.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Keterangan Mutahiq (Penerima Donasi)"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/foto_profil_mustahiq"
            android:layout_width="@dimen/foto_profil_detail_size"
            android:layout_height="@dimen/foto_profil_detail_size"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:av_border_color="@android:color/white"
            app:av_border_width="4dp"
            app:av_text_size_percentage="35" />

        <com.ad.zakat.widget.RobotoBoldTextView
            android:id="@+id/nama_calon_mustahiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="nama_calon_mustahiq" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/alamat_calon_mustahiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="alamat_calon_mustahiq" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/no_identitas_calon_mustahiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="no_identitas_calon_mustahiq" />

        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/no_telp_calon_mustahiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="no_telp_calon_mustahiq" />

        <com.ad.zakat.widget.RobotoLightTextView
        android:id="@+id/nama_amil_zakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_large"
        tools:text="nama_amil_zakat" />


        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/status_calon_mustahiq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="status_calon_mustahiq" />
        <com.ad.zakat.widget.RobotoLightTextView
            android:id="@+id/waktu_terakhir_donasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_large"
            tools:text="waktu_terakhir_donasi" />
    </LinearLayout>

    <com.ad.zakat.widget.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Jumlah Donasi"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_large" />

    <com.ad.zakat.widget.RobotoLightTextView

        android:id="@+id/jumlah_donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_large"
        tools:text="jumlah_donasi" />
</LinearLayout>